{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "description": "Name of the level",
      "type": "string"
    },
    "level": {
      "description": "Level number, used for sorting",
      "type": "integer",
      "minimum": -1
    },
    "events": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/enemy"
          },
          {
            "$ref": "#/definitions/player"
          },
          {
            "$ref": "#/definitions/condition"
          }
        ]
      }
    }
  },
  "required": [
    "title",
    "level",
    "events"
  ],
  "definitions": {
    "vector": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ]
    },
    "movement": {
      "type": "object",
      "properties": {
        "startAt": {
          "$ref": "#/definitions/vector"
        },
        "velocity": {
          "$ref": "#/definitions/vector"
        }
      },
      "required": [
        "startAt",
        "velocity"
      ]
    },
    "enemy": {
      "type": "object",
      "properties": {
        "archetype": {
          "type": "string",
          "description": "Type of the enemy"
        },
        "movement": {
          "$ref": "#/definitions/movement"
        },
        "path": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "Type of path",
              "enum": [
                "circular",
                "single_pass"
              ]
            },
            "waypoints": {
              "type": "array",
              "description": "An array of way points that the enemy should follow",
              "items": {
                "$ref": "#/definitions/vector"
              }
            }
          },
          "required": [
            "type",
            "waypoints"
          ]
        }
      },
      "required": [
        "archetype",
        "path",
        "movement"
      ]
    },
    "player": {
      "type": "object",
      "properties": {
        "movement": {
          "$ref": "#/definitions/movement"
        },
        "archetype": {
          "type": "string",
          "enum": [
            "player"
          ]
        }
      },
      "required": [
        "movement",
        "archetype"
      ]
    },
    "condition": {
      "type": "object",
      "description": "Conditional entity",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "timer",
            "enemies_defeated"
          ]
        },
        "argument": {
          "anyOf": [
            {
              "type": "integer",
              "description": "integer argument to the condition, may be time in seconds or number of entities"
            }
          ]
        }
      },
      "required": [
        "type"
      ]
    }
  }
}